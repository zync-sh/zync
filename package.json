{
  "name": "zync",
  "version": "1.4.0",
  "description": "A modern, beautiful SSH client for the web generation.",
  "main": "dist-electron/index.js",
  "homepage": "https://github.com/FDgajju/zync",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:linux": "npm run build && electron-builder --linux",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "preview": "vite preview"
  },
  "keywords": [
    "ssh",
    "terminal",
    "electron",
    "react"
  ],
  "author": "Gajendra <gajendravmy22@gmail.com>",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-python": "^6.2.1",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@uiw/codemirror-theme-github": "^4.25.4",
    "@uiw/react-codemirror": "^4.25.4",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.562.0",
    "node-pty": "^1.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-is": "^19.2.3",
    "recharts": "^3.6.0",
    "ssh2": "^1.17.0",
    "ssh2-sftp-client": "^12.0.1",
    "tailwind-merge": "^3.4.0",
    "xterm": "^5.3.0",
    "xterm-addon-canvas": "^0.12.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-search": "^0.13.0",
    "xterm-addon-web-links": "^0.9.0",
    "xterm-addon-webgl": "^0.16.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/ssh2": "^1.15.5",
    "@types/ssh2-sftp-client": "^9.0.6",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.zync.ssh",
    "productName": "Zync",
    "directories": {
      "output": "release/${version}"
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Development",
      "executableName": "zync",
      "maintainer": "Gajendra <gajendravmy22@gmail.com>",
      "desktop": {
        "StartupWMClass": "zync"
      }
    },
    "mac": {
      "target": [
        "zip"
      ],
      "icon": "public/icon.png",
      "category": "public.app-category.developer-tools"
    },
    "extraResources": [
      {
        "from": "public/icon.png",
        "to": "icon.png"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "FDgajju",
        "repo": "zync"
      }
    ]
  }
}