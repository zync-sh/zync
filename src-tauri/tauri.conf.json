{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Zync",
  "version": "2.0.0",
  "identifier": "zync",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zync",
        "width": 1000,
        "height": 700,
        "decorations": false,
        "transparent": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "both"
      }
    },
    "linux": {
      "deb": {
        "files": {}
      },
      "rpm": {
        "files": {}
      }
    },
    "targets": [
      "deb",
      "appimage",
      "rpm",
      "nsis"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/FDgajju/zync/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU3MzNEQUMxMUMxRDk2RTkKUldUcGxoMGN3ZG96Vjd4N1FGMXlXT2dMb04yVjY2azhIQ3Z3V2Q3b3M3NVZDNS9UOEZPYWpmN2sK"
    }
  }
}