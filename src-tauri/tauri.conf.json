{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zync",
  "version": "2.2.1",
  "identifier": "zync",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Zync",
        "width": 1000,
        "height": 700,
        "decorations": false,
        "transparent": true,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "both"
      }
    },
    "linux": {
      "deb": {
        "files": {
          "/usr/share/icons/hicolor/128x128/apps/zync.png": "icons/128x128.png",
          "/usr/share/icons/hicolor/32x32/apps/zync.png": "icons/32x32.png"
        }
      },
      "rpm": {
        "files": {}
      },
      "appimage": {
        "files": {}
      }
    },
    "targets": [
      "deb",
      "appimage",
      "rpm",
      "nsis",
      "app",
      "dmg"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/gajendraxdev/zync/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDYyNkJEQjI3OTQ3OENCODYKUldTR3kzaVVKOXRyWW91Wmh0TDdFc3ptSGtla3c2TnBmbDE1V0hiYXlHUGxKREhqNnVNbHZhaW8K"
    }
  }
}